<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.shaan.main_project._17_CompoundInterest.FragmentCI2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:padding="20dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/CI_textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Enter value to find Principal"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <EditText
            android:id="@+id/CI_editText11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Enter Compound Interest"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/CI_editText21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Enter Rate %"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/CI_editText31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:gravity="center"
            android:layout_gravity="center"
            android:hint="Enter Time In Year"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/CI_button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="Principal" />

    </LinearLayout>

</FrameLayout>
